// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  STUDENT
}

enum AttendanceStatus {
  PRESENT
  LATE
  ABSENT
  LEFT_EARLY
}

enum ClassEnrollmentStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id           String          @id @default(uuid())
  role         Role
  phone        String?         @unique
  email        String?         @unique
  passwordHash String
  createdAt    DateTime        @default(now())
  
  studentProfile StudentProfile?
  reviewedEnrollments ClassEnrollmentRequest[]
  
  @@map("users")
}

model StudentProfile {
  id             String   @id @default(uuid())
  userId         String   @unique
  studentCode    String   @unique
  fullName       String
  phone          String
  avatarUrl      String?
  faceRegistered Boolean  @default(false)
  identityCard   String?
  identityCardImage String?
  dateOfBirth    DateTime?

  user                User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessionRegistrations SessionRegistration[]
  attendances         Attendance[]
  enrollmentRequests  ClassEnrollmentRequest[]
  
  @@map("student_profiles")
}

enum ClassType {
  NAIL
  HAIR
  TATTOO
}

enum ClassLocation {
  CAN_THO
  HO_CHI_MINH
}

model TrainingClass {
  id        String        @id @default(uuid())
  code      String        @unique // Auto-generated
  name      String
  type      ClassType
  location  ClassLocation
  latitude  Float?
  longitude Float?
  year      String        @default("2025") // e.g., "2025" or "2024-2025"
  createdAt DateTime      @default(now())

  sessions  ClassSession[]
  enrollmentRequests ClassEnrollmentRequest[]

  @@map("training_classes")
}

model ClassSession {
  id                   String   @id @default(uuid())
  trainingClassId      String?
  date                 String   // Format: YYYY-MM-DD
  name                 String   // Ca 1, Ca 2, Ca 3
  startTime            String   // Format: HH:mm
  endTime              String   // Format: HH:mm
  registrationDeadline DateTime // startTime - 2 hours
  isDeleted            Boolean  @default(false)
  createdAt            DateTime @default(now())
  
  trainingClass        TrainingClass? @relation(fields: [trainingClassId], references: [id], onDelete: Cascade)
  sessionRegistrations SessionRegistration[]
  attendances          Attendance[]
  
  @@map("class_sessions")
}

model SessionRegistration {
  id           String   @id @default(uuid())
  studentId    String
  sessionId    String
  registeredAt DateTime @default(now())
  
  student StudentProfile @relation(fields: [studentId], references: [id], onDelete: Cascade)
  session ClassSession   @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  @@unique([studentId, sessionId])
  @@map("session_registrations")
}

model Attendance {
  id                String            @id @default(uuid())
  studentId         String
  sessionId         String
  checkInTime       DateTime?
  checkInLat        Float?
  checkInLng        Float?
  checkInFaceScore  Float?
  checkInImageUrl   String?
  checkOutTime      DateTime?
  checkOutLat       Float?
  checkOutLng       Float?
  checkOutFaceScore Float?
  checkOutImageUrl  String?
  status            AttendanceStatus  @default(ABSENT)
  locationNote      String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  
  student StudentProfile @relation(fields: [studentId], references: [id], onDelete: Cascade)
  session ClassSession   @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  @@unique([studentId, sessionId])
  @@map("attendances")
}

model ClassEnrollmentRequest {
  id              String                  @id @default(uuid())
  studentId       String
  trainingClassId String
  status          ClassEnrollmentStatus   @default(PENDING)
  requestedAt     DateTime                @default(now())
  reviewedAt      DateTime?
  reviewedBy      String?
  rejectionReason String?
  
  student       StudentProfile @relation(fields: [studentId], references: [id], onDelete: Cascade)
  trainingClass TrainingClass  @relation(fields: [trainingClassId], references: [id], onDelete: Cascade)
  reviewer      User?          @relation(fields: [reviewedBy], references: [id])
  
  @@unique([studentId, trainingClassId])
  @@map("class_enrollment_requests")
}
